{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "paths": {
      "@*": ["./*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
